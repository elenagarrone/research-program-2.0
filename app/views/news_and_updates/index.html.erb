<div class="container-fluid">
    <% if user_signed_in? %>
        <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "float-right"%>
        <a href="<%= new_news_path %>" class="button clear float-right">Add news</a>
    <% end %>

    <main role="main" class="news_updates<% if user_signed_in? %> clear<% end %>">
        <h1 class="h2"><%=t 'news.h1' %></h1>
        <% if @news.all.any? %>
            <table>
                <caption class="access"><%=t 'news.caption' %></caption>
                <tbody>
                    <% @news.all.each do |post| %>
                        <tr>
                            <td><%= post.created_at.strftime("%v") %></td>
                            <td>
                                <% if I18n.locale == :en %>
                                    <%= post.description %>
                                <% elsif I18n.locale == :it %>
                                    <% if post.description_it %><%= post.description_it %><% else %><%= post.description %><% end %>
                                <% elsif I18n.locale == :es %>
                                    <% if post.description_es %><%= post.description_es %><% else %><%= post.description %><% end %>
                                <% elsif I18n.locale == :hu %>
                                    <% if post.description_hu %><%= post.description_hu %><% else %><%= post.description %><% end %>
                                <% elsif I18n.locale == :de %>
                                    <% if post.description_de %><%= post.description_de %><% else %><%= post.description %><% end %>
                                <% elsif I18n.locale == :da %>
                                    <% if post.description_da %><%= post.description_it %><% else %><%= post.description %><% end %>
                                <% elsif I18n.locale == :el %>
                                    <% if post.description_el %><%= post.description_it %><% else %><%= post.description %><% end %>
                                <% end %>
                            </td>
                            <% if user_signed_in? %>
                                <td><%= link_to "Edit", edit_news_path(post) %></td>
                                <td><%= link_to "Delete", news_path(post), method: :delete %></td>
                            <% end %>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        <% else %>
            <p><%=t 'news.no_message' %></p>
        <% end %>
    </main>
</div>
